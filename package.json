{
  "name": "calculadora-modalidad-imss",
  "version": "3.5.0",
  "description": "Sistema CRM + Calculadora IMSS Modalidad 40/10/33 con IA multicanal",
  "main": "server/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "postinstall": "npm run build",
    "pm2:start": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop calculadora-imss",
    "pm2:restart": "pm2 reload calculadora-imss",
    "pm2:logs": "pm2 logs calculadora-imss",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "twilio": "^5.0.0",
    "node-telegram-bot-api": "^0.66.0",
    "node-fetch": "^3.3.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
